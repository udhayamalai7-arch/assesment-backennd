class Vehicle
{
    public string vehicleType;
}

class Car : Vehicle
{
    public string brand;
}

class SportsCar : Car
{
    static void Main()
    {
        SportsCar sc = new SportsCar();
        sc.vehicleType = "Four Wheeler";
        sc.brand = "Ferrari";

        Console.WriteLine("Vehicle Type : " + sc.vehicleType);
        Console.WriteLine("Brand        : " + sc.brand);
    }
}



class Shape
{
    public void Display()
    {
        Console.WriteLine("This is a Shape");
    }
}

class Rectangle : Shape
{
    public int length;
    public int breadth;

    public void Area()
    {
        Console.WriteLine("Area = " + (length * breadth));
    }

    static void Main()
    {
        Rectangle r = new Rectangle();
        r.Display();   // inherited
        r.length = 5;
        r.breadth = 4;
        r.Area();
    }
}

